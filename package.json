{
  "name": "react-big-screen",
  "private": false,
  "homepage": "https://github.com/tangjiahui-cn/react-big-screen.git",
  "author": "tangjiahui-cn",
  "description": "一个前端大屏看板项目",
  "license": "ISC",
  "version": "0.0.27",
  "module": "./es/index.mjs",
  "types": "./types/src/export/index.d.ts",
  "scripts": {
    "dev": "cross-env vite",
    "build": "tsc -b && vite build",
    "build:analyzer": "tsc -b cross-env mode=analyzer pnpm build",
    "build:esm": "tsc -b && cross-env LIB_MODE=1 vite build -c ./config/vite.buildESM.ts",
    "build-analysis:esm": "tsc -b && cross-env LIB_MODE=1 mode=analyzer vite build -c ./config/vite.buildESM.ts",
    "build:lib": "pnpm build:esm",
    "publish-npm": "sh ./script/checkLogin.sh && pnpm build:lib && sh ./script/publish.sh",
    "lint": "eslint .",
    "preview": "vite preview",
    "postinstall": "husky install",
    "commit": "git add . && git-cz",
    "build:github-page": "cross-env deploy=github pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tangjiahui-cn/react-big-screen.git"
  },
  "bugs": {
    "url": "https://github.com/tangjiahui-cn/react-big-screen/issues"
  },
  "files": [
    "README.md",
    "es",
    "umd",
    "types"
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.2",
    "ahooks": "^3.8.4",
    "antd": "4.24.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "driver.js": "^1.3.6",
    "echarts": "^5.6.0",
    "file-saver": "^2.0.5",
    "hotkeys-js": "^3.13.9",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.52.2",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^6",
    "umi-request": "^1.4.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@types/file-saver": "^2.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.1",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-react": "^4.3.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "husky": "^8",
    "inquirer": "8",
    "less": "^4.2.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vite-bundle-analyzer": "^0.17.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-html": "^3.2.2"
  }
}
