  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.2",
    "ahooks": "^3.8.4",
    "antd": "4.24.1",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "echarts": "^5.6.0",
    "hotkeys-js": "^3.13.9",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.52.2",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6",
    "umi-request": "^1.4.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
